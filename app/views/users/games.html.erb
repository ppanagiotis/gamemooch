<div class="page-header">
	<h1>My Available Games</h1>
</div>
<%= form_tag(users_delete_games_path, :method => "get") do %>
	<%= select_tag "selectImage", options_for_select(@games.map  { |game| [{ data: { 'img-src': game.url } }, game.title , [ 'id' => game.id, 'name' =>  game.title, 'cover' => game.url ] ] }), multiple: true, class: 'image-picker show-labels show-html'%>
	<div align="center">
		<%= submit_tag "Delete Games", data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-lg btn-block" %>
	</div>
<% end %>
<div class="page-header">
	<h1>Mooched by others</h1>
</div>
<%= form_tag(games_unmooch_path, :method => "get") do %>
	<%= select_tag "moochedImage", options_for_select(@mooched_games.map  { |game| [{ data: { 'img-src': game.url } },  if game.mooch_user.username? then "#{game.title} <hr> #{game.mooch_user.username}" else  "#{game.title} <hr> #{game.mooch_user.email}" end , [ 'id' => game.id, 'name' =>  game.title, 'cover' => game.url ] ] }), multiple: true, class: 'image-picker show-labels show-html'%>
	<div align="center">
		<%= submit_tag "Unmooch Games", class: "btn btn-primary btn-lg btn-block" %>
	</div>
<% end %>
<div align="center">
<%= will_paginate @games %>
</div>
